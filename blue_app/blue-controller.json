{
    "kind":"ReplicationController",
    "apiVersion":"v1",
    "metadata":{
       "name":"blueapp",
       "labels":{
          "app":"blueapp"
       }
    },
    "spec":{
       "replicas":1,
       "selector":{
          "app":"blueapp"
       },
       "template":{
          "metadata":{
             "labels":{
                "app":"blueapp"
             }
          },
          "spec":{
             "containers":[
                {
                   "name":"blueapp",
                   "image":"mshmsudd/blue-flask-app:$BUILD_NUMBER",
                   "ports":[
                      {
                         "name":"http-server",
                         "containerPort":3000
                      }
                   ]
                }
             ]
          }
       }
    }
 }